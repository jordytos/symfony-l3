{% extends 'public/layout.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Articles</h2>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                {% for article in articles %}
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                    <div class="full news_blog">
                                        <img class="img-responsive" src="{{ asset('uploads/images/'~ article.image) }}" alt="#" width="350" height="280" />
                                        <div class="overlay"><a class="main_bt transparent" href="{{ path('article_show', { 'id' : article.id }) }}">Voir</a></div>
                                        <div class="container-fluid blog_details">
                                            <h3>{{ article.title }}</h3>
                                            <p> {{ article.content}} </p>
                                        </div>
                                    </div>
                                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <center><a class="btn btn-primary" href="{{ path('article_new') }}">Ajouter article</a></center>
    {% endif %}

    

{% endblock %}
