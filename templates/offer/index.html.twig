{% extends 'public/layout.html.twig' %}

{% block title %}Offres{% endblock %}


{% block body %}



    <div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Offres</h2>
                        </div>
                    </div>
                </div>
            </div>        
            

            <p class="text-monospace" >* Tri ajout récent </p>


            
            <div class="row">
                {% for offer in offers|sort((a,b) => b.id <=> a.id) %}
                                <div class="col-md-4 col-sm-6 col-xs-12">
                                    <div class="full news_blog">
                                        <img class="img-responsive" src="{{ asset('uploads/images/'~ offer.image) }}" alt="#" width="350" height="280" />
                                        <div class="overlay">><a class="main_bt transparent" href="{{ path('offer_show', { 'id' : offer.id }) }}">Voir</a></div>
                                        <div class="container-fluid blog_details">
                                            <h3>{{ offer.titre }}</h3>
                                            <p> {{ offer.prix}} €</p>
                                            <p> {{offer.relationSouscripOffer|length}} abonnés </p>
                                        </div>
                                    </div>
                                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_AGENT') %}
        <center><a class="btn btn-primary" href="{{ path('offer_new') }}">Ajouter offre</a></center>
    {% endif %}
    
    
    
{% endblock %}
