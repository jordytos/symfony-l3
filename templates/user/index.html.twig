{% extends 'admin/layout.html.twig' %}

{% block title %}Listes des utilisateur{% endblock %}

{% block body %}
    
    <div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Utilisateurs</h2>
                        </div>
                    </div>
                </div>
        </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Age</th>
                <th>Roles</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}

        
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.ageuser }} ans</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>

                {% if user.blocked == '1' %}
                    <td>Bloqué</td>

                    {% else %}
                    <td>Actif</td>
                    
                {% endif %} 
                
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Afficher</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun utilisateurs trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
