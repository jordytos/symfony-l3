{% extends 'espace-client/layout.html.twig' %}

{% block title %}Mes souscriptions{% endblock %}

{% block body %}
    <div class="section layout_padding padding_top_0">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="full">
                        <div class="heading_main text_align_center">
                            <h2><span class="theme_color"></span>Mes souscriptions</h2>
                        </div>
                    </div>
                </div>
            </div>

    <table class="table  table-hover">
        <thead>
            <tr>
                <th>Etat</th>
                <th>Offres</th>
            </tr>
        </thead>
        <tbody>
        {% for souscription in user %}
            <tr>
                <td>{{ souscription.etat }}</td>
                <td>{{ souscription.relation.titre }}</td>
                
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    Vous n'avez pas encore souscrit Ã  des offres <a class="btn btn-primary" href="{{ path('offer_index') }}">Voir les Offres</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
